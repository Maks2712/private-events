<h2>Sign up</h2>
<hr>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, :placeholder=>'Enter your name'%>
  </div>
<hr>
  <div class="field">
    <%= f.email_field :email, :placeholder=>'Email address'%>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
<hr>
  <div class="field">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", :placeholder=>"Password (#{@minimum_password_length} characters minimum)" %>
  </div>
<hr>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder=>'Password again' %>
  </div>
<hr>
  <div class="actions">
    <%= f.button "Sign up", type: "submit", :class=> "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
