<h1>NEW EVENT</h1>

<%= form_with(model: [@user,@event],local:true) do |form| %>
<p class="mt"><%=form.label :title, "enter event's name" %></p>
<p><%=form.text_field :title, class:'form-text-field' %></p>
<p class="mt"><%=form.label :date, "enter data of event" %></p>
<p><%=form.datetime_local_field :date, class:'form-datetime-local-field' %></p>
<p class="mt"><%= form.submit 'CREATE EVENT' %></p>
	<% end %>